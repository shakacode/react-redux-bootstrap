{
  "name": "comments-app",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=6.3.1",
    "npm": ">=3.10.3"
  },
  "scripts": {
    "eslint": "eslint --ext .js,.jsx .",
    "stylelint": "stylelint 'src/**/*.scss'",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "lint": "npm run eslint && npm run stylelint && npm run flow",
    "test": "NODE_ENV=test NODE_PATH=.:./src:./src/lib mocha --opts mocha.opts 'src/**/*.test.@(js|jsx)'",
    "build:production": "npm run clean && NODE_ENV=production webpack --env.production",
    "clean": "rm -rf ./dist/*",
    "start": "npm run clean && webpack --env.dev --watch"
  },
  "dependencies": {
    "immutable": "^3.8.1",
    "lodash": "^4.15.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.0",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "redux-saga": "^0.11.0",
    "reselect": "^2.5.3",
    "whatwg-fetch": "^1.0.0"
  },
  "devDependencies": {
    "autoprefixer": "6.4.0",
    "babel-core": "6.13.2",
    "babel-loader": "6.2.4",
    "babel-polyfill": "6.13.0",
    "babel-preset-es2015": "6.13.2",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-2": "6.13.0",
    "babel-register": "6.11.6",
    "chai": "3.5.0",
    "copy-webpack-plugin": "3.0.1",
    "css-loader": "0.23.1",
    "eslint": "3.3.1",
    "eslint-config-shakacode": "6.0.0",
    "eslint-import-resolver-webpack": "0.5.1",
    "eslint-plugin-flowtype": "2.7.2",
    "eslint-plugin-import": "1.13.0",
    "eslint-plugin-jsx-a11y": "2.1.0",
    "eslint-plugin-lodash-fp": "2.0.0",
    "eslint-plugin-mocha": "4.3.0",
    "eslint-plugin-react": "6.1.1",
    "extract-text-webpack-plugin": "2.0.0-beta.3",
    "flow-bin": "0.30.0",
    "html-webpack-plugin": "2.22.0",
    "ignore-styles": "4.0.0",
    "mocha": "3.0.2",
    "node-sass": "3.8.0",
    "postcss-loader": "0.10.1",
    "react-addons-test-utils": "15.3.1",
    "redux-logger": "2.6.1",
    "sass-loader": "4.0.0",
    "sass-resources-loader": "1.1.0",
    "style-loader": "0.13.1",
    "stylelint": "7.1.0",
    "stylelint-config-standard": "12.0.0",
    "webpack": "2.1.0-beta.20"
  }
